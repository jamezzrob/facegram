<%= simple_form_for(@profile) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :username, label: "choose your username", placeholder: "pedro" %>
    <%= f.input :photo, label: "Upload your profile picture" %>
    <%= f.input :bio, label: "Tell us about yourself" %>
  </div>

  <div class="form-actions">
    <%= f.submit "Create profile", class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>
